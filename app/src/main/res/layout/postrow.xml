<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_post_icon_post_row"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:src="@drawable/blackboard"
                app:civ_border_color="@color/primaryLightColor"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_post_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="Title"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_creation_time_post_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="19th June, 2019" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/post_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:src="@drawable/ic_more_vert_black_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_post_content_post_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="web"
            android:padding="5dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut la."
            android:textColor="#C9000000"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/linearLayout_post_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/half_black"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/bt_like_post_row"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableStart="@drawable/ic_like_border_black_24dp"
                android:paddingStart="10dp"
                android:text="Like"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/black_semi_transparent"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_comment_post_row"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
                android:paddingStart="15dp"
                android:text="Comment"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/black_semi_transparent"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_share_post_row"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                android:paddingStart="10dp"
                android:text="Share"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black_semi_transparent"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <!--</androidx.constraintlayout.widget.ConstraintLayout>-->
</androidx.cardview.widget.CardView>