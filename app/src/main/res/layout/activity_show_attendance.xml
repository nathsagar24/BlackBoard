        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view_show_attendance"
        app:layout_constraintEnd_toStartOf="@+id/spn_show_attendance"
        app:layout_constraintHorizontal_bias="0.975"
